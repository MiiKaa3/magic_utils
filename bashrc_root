# If not running interactively, don't do anything
[[ $- != *i* ]] && return

alias ls='exa --color=auto'
alias ll='exa -l --color=auto'
alias la='exa -a --color=auto'
alias lla='exa -l -a --color=auto'
alias py='python -q'
alias grep='grep --color=auto'
PS1='\[\e[00;91m\]Î» \W \[\e[0m\]>> '

